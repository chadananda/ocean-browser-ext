{
  "name": "Ocean Search 2.0",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension popup ocean search",
  "icons": {
    "128": "/icons/ocean.png",
    "48": "/icons/ocean.png",
    "16": "/icons/ocean.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/ocean.png",
    "default_title": "Ocean Search",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*",
        "https://www.google.com/",
        "https://bahai-library.com/*",
        "https://*.bahai.org/",
        "https://reference.bahai.org/en/",
        "https://www.youtube.com/",
        "https://www.bic.org/",
        "https://www.reddit.com/",
        "https://www.yahoo.com/",
        "https://*.wikipedia.org/wiki/*",
        "https://www.baidu.com/"
      ],
      "css": [
        "content/content.css"
      ],
      "js": [
        "lib/jquery.min.js",
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": [
      "lib/jquery.min.js",
      "lib/vue.js",
      "background.js"
    ],
    "persistent": false
  }
}